<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/notification_bg9"
    android:orientation="horizontal" >

    <!-- 通知栏图片最大128*128	16*16 -->

    <ImageView
        android:id="@+id/notification_music_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:padding="1dp"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/notification_music_img2"
        android:layout_width="20dp"
        android:layout_height="60dp"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/notification_music_title"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/notification_music_title_left"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:gravity="left"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/Black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/notification_music_title_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:singleLine="true"
                android:text=""
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notification_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/notification_music_title"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/notification_music_pre"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/player_pre" />

            
            <TextView 
                android:layout_width="55dp"
                android:layout_height="30dp"
                />

            <ImageView
                android:id="@+id/notification_music_play_or_pause"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/player_pause" />


            <TextView 
                android:layout_width="55dp"
                android:layout_height="30dp"
                />
            <ImageView
                android:id="@+id/notification_music_next"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/player_next" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>